{
    "version": "0.2.0",
     "configurations": [
         {
             "name": "Launch C++",
             "type": "cppvsdbg",
             "request": "launch",
             "program": "node",
             "args": [ "${workspaceFolder}/index.js" ],
             "stopAtEntry": false,
             "cwd": "${workspaceFolder}",
